<h1> Links </h1>

<h4>
  <a href="/links/new">Create link</a>
</h4>

<ul id='links'>
    <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL: <%= link.url %>
      Tags: <%= link.tags.map(&:name).map{|tag| tag.insert(0, '#')}.join(' ') if link.tags.first %>
    </li>
    <% end %>

</ul>
